{
	"name": "cyop",
	"private": true,
	"type": "module",
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*"
		],
		"catalog": {
			"hono": "^4.8.2",
			"@trpc/server": "^11.5.0",
			"better-auth": "^1.3.28",
			"dotenv": "^17.2.2",
			"zod": "^4.1.11",
			"typescript": "^5.8.2",
			"tsdown": "^0.15.5",
			"lucide-react": "^0.473.0",
			"react": "19.1.0",
			"react-dom": "19.1.0",
			"@trpc/client": "^11.5.0",
			"@types/node": "^22.13.13",
			"@types/react": "~19.1.10",
			"@types/react-dom": "^19.0.4",
			"postcss": "^8.5.3",
			"tailwindcss": "^4.0.15",
			"drizzle-orm": "^0.44.2"
		}
	},
	"scripts": {
		"check": "biome check --write .",
		"prepare": "husky",
		"postinstall": "bun run build:ui",
		"dev": "turbo dev",
		"build": "turbo build",
		"build:ui": "turbo run build --filter=@cyop/ui",
		"check-types": "turbo check-types",
		"dev:native": "turbo -F native dev",
		"dev:web": "turbo -F web dev",
		"dev:server": "turbo -F server dev",
		"db:push": "turbo -F @cyop/db db:push",
		"db:studio": "turbo -F @cyop/db db:studio",
		"db:generate": "turbo -F @cyop/db db:generate",
		"db:migrate": "turbo -F @cyop/db db:migrate"
	},
	"dependencies": {
		"dotenv": "^17.2.2",
		"zod": "^4.1.11"
	},
	"devDependencies": {
		"turbo": "^2.5.4",
		"@biomejs/biome": "^2.2.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.2",
		"tsdown": "^0.15.5",
		"@types/bun": "^1.2.6"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"biome check --write"
		]
	},
	"packageManager": "bun@1.2.21"
}
